<body>
  

<form action="/postForm" name="username" method="post">
  <label for="name">이름<input type="text"  name="username" required></label>


  <fieldset>
    <legend>성별</legend>
    <label for="gender" name="gender">
      <input type="radio" name="gender" value="남자" required>남자
      <input type="radio" name="gender" value="여자" >여자
    </label>
    </fieldset>


<fieldset>
  <legend>생년월일</legend>
<select name="year" id="year">
  <option>2020</option>
  <option>2021</option>
  <option>2022</option>
</select>
<select name="month" id="month">
  <option>10</option>
  <option>11</option>
  <option>12</option>
</select>
<select name="date" id="date">
  <option>29</option>
  <option>30</option>
  <option>31</option>
</select>
</fieldset>

<fieldset>
  <legend>관심사</legend>
  <label for="favorite" name="favorite">
<input type="checkbox" name="favorite" value="1">1
<input type="checkbox" name="favorite" value="2">2
<input type="checkbox" name="favorite" value="3">3
<input type="checkbox" name="favorite" value="4">4
</label>
</fieldset>

<fieldset>
<legend>좋아하는 색상</legend>
<input type="color" name="color"><br>
</fieldset>

<fieldset>
  <legend>아이디 및 비밀번호</legend>
  <label for="email">이메일</label>
  <input type="email" id="email" name="email">
  <br>

  <label for="paddword">패스워드</label>
  <input class="myPw" type="password" id="password" name="pw">
  </fieldset>

<button type="submit">회원가입</button>

</form>

</body>
</body>
</html>